{
  "name": "mcp-optimist",
  "version": "0.1.0",
  "description": "An intelligent code optimization MCP server that analyzes and improves codebases",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-optimist": "dist/index.js"
  },
  "scripts": {
    "clean": "pnpx rimraf dist/ node_modules/ .tmp/ archive/ memory/ run/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/ *.md *.json",
    "format:check": "prettier --check src/ tests/ *.md *.json",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepare": "pnpm run format && pnpm run lint && husky"
  },
  "keywords": [
    "mcp",
    "code-optimization",
    "static-analysis",
    "performance",
    "code-quality",
    "refactoring"
  ],
  "author": "Atomic-Germ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Atomic-Germ/mcp-optimist.git"
  },
  "bugs": {
    "url": "https://github.com/Atomic-Germ/mcp-optimist/issues"
  },
  "homepage": "https://github.com/Atomic-Germ/mcp-optimist#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "glob": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
